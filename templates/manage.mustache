<h1>Manage Messages</h1>
<p>{{texttodisplay}}</p>
{{#messages}}
<div class="card">
    <div class="card-body mt-3">
       <p> {{message_text}} Message type: {{message_type}} </p>
        <input type="button" class="btn btn-primary" value="Edit Message" onclick="location.href='{{editurl}}?message_id={{id}}'">
        <input type="button" class="btn btn-danger local_message_delete_button" data-id="{{id}}" value="Delete Message">
    </div>
  </div>
  {{/messages}}
<hr>
<input type="button" class="btn btn-primary" value='Create Message' onclick="location.href='{{editurl}}'">